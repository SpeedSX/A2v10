@model System.Exception

@{
	Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Exception - A2:Web</title>
    <style>
        body {
            margin: 1.67em;
            font-family: system-ui, 'Segoe UI', Tahoma, Verdana, sans-serif;
            font-size:13px;
            color:#333;
        }
        .trace {
            font-family: Consolas, 'Courier New', Courier, monospace;
            font-size:12px;
        }
        .text-danger {
            color: #a94442;
        }
        h1, h2 {
            margin:0.2em, 0;
        }
        h5 {
            margin:0;
        }
    </style>
</head>
<body>
    <h1 class="text-danger">An exception occurred</h1>
    <h2 class="text-danger">@Model.Message</h2>

    <h5>Stack trace</h5>
    <p class="trace">
        @Model.StackTrace
    </p>
</body>
</html>
